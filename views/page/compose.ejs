<!-- compose.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include necessary head content -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Email System - Compose</title>
  <!-- ... -->
  <title>Compose Email</title>
</head>
<body>
  <!-- Include header content (you can reuse the header from inbox.ejs) -->

  <!-- Main Section -->
  <section>
    <h2>Compose Email</h2>
    <nav>
      <ul>
        <li><a href="/inbox">Inbox</a></li>
        <li><a href="/compose">Compose</a></li>
        <li><a href="/outbox">Outbox</a></li>
        <li><a href="/signout">Sign Out</a></li>
      </ul>
    </nav>
    <form action="/compose" method="post" enctype="multipart/form-data">
      <!-- Recipient Dropdown -->
      <label for="recipient">Recipient:</label>
      <select id="recipient" name="recipient">
        <% users.forEach(u => { %>
          <option value="<%= u.id %>"><%= u.full_name %></option>
        <% }); %>
      </select>

      <!-- Subject Field -->
      <label for="subject">Subject:</label>
      <input type="text" id="subject" name="subject">

      <!-- Body Textarea -->
      <label for="body">Body:</label>
      <textarea id="body" name="body"></textarea>

      <!-- File Input for Attachment -->
      <label for="attachment">Attachment:</label>
      <input type="file" id="attachment" name="attachment">

      <!-- Send Button -->
      <button type="submit">Send</button>
    </form>
  </section>

  <!-- Include footer content (if any) -->

  <!-- Include any necessary scripts (if any) -->
</body>
</html>
